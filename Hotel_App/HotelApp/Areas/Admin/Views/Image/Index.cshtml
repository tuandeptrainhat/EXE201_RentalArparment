@model List<Image>

<div class="layout-demo-wrapper">
    <div class="card shadow-lg container p-5">
        <div class="titlepage">
            <h2>Quản lý ảnh</h2>
        </div>
        <button class="btn btn-primary" style="width: 200px;" onclick="location.href='@Url.Action("Create","Image")'">Thêm ảnh</button>
        <table id="studentTable" class="table table-striped">
        <tr>
            <th>ID ảnh</th>
            <th>ID phòng</th>
            <th>Đường dẫn</th>
            <th>Chú thích</th>
            <th colspan="3" class="text-center">Chức năng</th>
        </tr>
        
        @foreach (var item in Model){
            <tr>
                <td>@item.Id</td>
                <td>@item.RoomID</td>
                <td>@item.Path</td>
                <td>@item.Caption</td>
                <td><button type="button" class="btn btn-info">Xem</button></td>
                <td><button type="button" class="btn btn-warning">Sửa</button></td>
                <td>
                    <form asp-action="Delete" method="post">
                        @Html.AntiForgeryToken()
                            <input type="hidden" name="Id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </table>
</div>
</div>