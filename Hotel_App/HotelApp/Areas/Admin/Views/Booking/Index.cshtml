@model List<BookingVM>

<div class="layout-demo-wrapper">
    <div class="card shadow-lg container p-5">
        <div class="titlepage">
            <h2>Quản lý đơn đặt phòng</h2>
        </div>
        <button class="btn btn-primary mb-4" style="width: 200px;" onclick="location.href='@Url.Action("SelectClient", "Client")'">Đặt phòng</button>

        <table id="BookingTableAdmin" class="table table-striped table-bordered mt-5 pt-5" style="width:100%">
            <thead class="table-dark">
                <tr>
                    <th>STT</th>
                    <th>Email</th>
                    <th>Họ và tên</th>
                    <th>Tên phòng</th>
                    <th>Ngày nhận phòng</th>
                    <th>Ngày trả phòng</th>
                    <th>Tổng tiền</th>
                    <th>Trạng thái</th>
                    <th>Chức năng</th>
                </tr>
            </thead>
        </table>
    </div>
</div>