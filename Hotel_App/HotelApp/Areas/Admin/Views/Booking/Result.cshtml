@{
    ViewData["Title"] = "Kết quả Đặt Phòng";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0">
                <!-- Card Header -->
                <div class="card-header bg-gradient text-white text-center py-4 rounded-top" style="background: linear-gradient(45deg, #6a11cb, #2575fc);">
                    <h3 class="fw-bold mb-0">Kết quả Đặt Phòng</h3>
                </div>

                <!-- Card Body -->
                <div class="card-body p-5" style="background-color: #f7f8fa;">
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-success text-center d-flex align-items-center justify-content-center">
                            <i class="bi bi-check-circle-fill text-success me-2" style="font-size: 1.5rem;"></i>
                            <span class="fw-semibold">@TempData["Message"]</span>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning text-center d-flex align-items-center justify-content-center">
                            <i class="bi bi-exclamation-circle-fill text-warning me-2" style="font-size: 1.5rem;"></i>
                            <span class="fw-semibold">Không có thông báo nào để hiển thị.</span>
                        </div>
                    }

                    <!-- Action Button -->
                    <div class="text-center mt-4">
                        <a href="@Url.Action("Index", "Booking", new { area = "Admin" })"
                           class="btn btn-gradient btn-lg px-4 py-2 shadow-sm text-white"
                           style="background: linear-gradient(45deg, #6a11cb, #2575fc); border: none;">
                            <i class="bi bi-arrow-left-circle me-2"></i>Quay lại danh sách đặt phòng
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
