@model HotelApp.Models.RoomType

<div class="layout-demo-wrapper">
    <div class="card shadow-lg container pt-5 pb-10">
        <div class="titlepage">
            <h2>Chỉnh sửa loại căn hộ</h2>
        </div>
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label for="Name">Tên</label>
                <input type="text" class="form-control" asp-for="Name" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Description">Mô tả</label>
                <input type="text" class="form-control" asp-for="Description" required />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="People">Số lượng người</label>
                <input type="text" class="form-control" asp-for="People" required />
                <span asp-validation-for="People" class="text-danger"></span>
            </div>
            <div class="form-group mb-5">
                <label for="Image" class="form-label">Ảnh</label>
                <input type="file" class="form-control" id="Image" name="Image">
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <img src="@Url.Content(Model.ImagePath)" alt="Room Image" class="img-thumbnail mt-2" style="max-width: 200px;" />
                }
            </div>

            <button type="submit" class="btn btn-primary">Lưu</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Hủy</a>
        </form>
    </div>
</div>
