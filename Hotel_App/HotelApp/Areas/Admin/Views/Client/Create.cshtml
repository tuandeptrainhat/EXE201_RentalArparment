@model HotelApp.ViewModels.RegisterVM

<div class="layout-demo-wrapper">
    <div class="card shadow-lg container pt-5 pb-10">
        <div class="titlepage">
            <h2>Thêm khách hàng</h2>
        </div>
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <input type="hidden" name="returnUrl" value="@Context.Request.Query["returnUrl"]" />
            <div class="form-group">
                <label for="FirstName">Họ</label>
                <input asp-for="FirstName" type="text" class="form-control" required />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="LastName">Tên</label>
                <input asp-for="LastName" type="text" class="form-control" required />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Email">Email</label>
                <input asp-for="Email" type="text" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="PhoneNumber">Số điện thoại</label>
                <input asp-for="PhoneNumber" type="text" class="form-control" required />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Password">Mật khẩu</label>
                <input asp-for="Password" type="password" class="form-control" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="ConfirmedPassword">Nhập lại mật khẩu</label>
                <input asp-for="ConfirmedPassword" type="password" class="form-control" required />
                <span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Lưu</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Hủy</a>
        </form>
    </div>
</div>
