@model List<AppUser>

<div class="layout-demo-wrapper">
    <div class="card shadow-lg container p-5">
        <div class="titlepage">
            <h2>Chọn khách hàng</h2>
        </div>
        <div class="mb-3">
            <button class="btn btn-success" onclick="location.href='@Url.Action("Create", "Client", new { returnUrl = Context.Request.Path })'">Thêm</button>
        </div>
        <table id="ClientTable" class="table table-striped table-bordered mt-5 pt-5" style="width:100%">
            <thead class="table-dark">
                <tr>
                    <th>STT</th>
                    <th>Email</th>
                    <th>Họ và tên</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Model[i].Email</td>
                        <td>@Model[i].FullName</td>
                        <td>
                            <button class="btn btn-primary" onclick="location.href='@Url.Action("SelectClient", "Booking", new { userId = Model[i].Id })'">Chọn</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
