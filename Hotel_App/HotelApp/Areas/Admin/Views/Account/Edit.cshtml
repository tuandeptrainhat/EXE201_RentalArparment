@model HotelApp.Areas.Admin.ViewModels.ProfileVM

<div class="container-fluid d-flex justify-content-center align-items-center"
     style="background-image: url('/images/banner1.jpg'); background-size: cover; padding: 90px 0;">
    <div class="card shadow-lg border-0" style="width: 400px;">
        <!-- Button Group -->
        <div class="btn-group w-100" role="group">
            <a asp-action="Profile" class="btn btn-dark">
                <i class="bi bi-person-circle"></i> Thông tin cá nhân
            </a>
            <a asp-action="ChangePassword" class="btn btn-outline-dark">
                <i class="bi bi-lock-fill"></i> Đổi mật khẩu
            </a>
        </div>

        <!-- Form -->
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">Cập nhật thông tin</h2>

                <!-- Input Fields -->
                <div class="mb-3">
                    <label for="Email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" readonly>
                </div>
                <div class="mb-3">
                    <label for="FirstName" class="form-label">Họ</label>
                    <input type="text" class="form-control" id="FirstName" name="FirstName" value="@Model.FirstName">
                </div>
                <div class="mb-3">
                    <label for="LastName" class="form-label">Tên</label>
                    <input type="text" class="form-control" id="LastName" name="LastName" value="@Model.LastName">
                </div>
                <div class="mb-3">
                    <label for="PhoneNumber" class="form-label">Số điện thoại</label>
                    <input type="text" class="form-control" id="PhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber">
                </div>

                <!-- Avatar Upload -->
                <div class="mb-3">
                    <label for="Avatar" class="form-label">Avatar</label>
                    <input type="file" class="form-control" id="Avatar" name="Avatar">
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="card-footer text-center">
                <button type="submit" class="btn btn-dark w-75">
                    <i class="bi bi-pencil-square"></i> Cập nhật thông tin
                </button>
            </div>
        </form>
    </div>
</div>
