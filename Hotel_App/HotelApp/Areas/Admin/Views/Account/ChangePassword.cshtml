@model HotelApp.Areas.Admin.ViewModels.ChangePasswordVM

<div class="container-fluid d-flex justify-content-center align-items-center" style="background-image: url('/images/banner1.jpg'); background-size: cover; padding: 90px 0px;">
    <div class="card shadow-lg" style="width: 400px;">
        <!-- Button Group -->
        <div class="btn-group w-100" role="group">
            <a asp-action="Profile" class="btn" style="border: 1px solid black; color: black;">
                <i class="bi bi-person-circle"></i> Thông tin cá nhân
            </a>
            <a asp-action="ChangePassword" class="btn" style="background-color: black; color: white;">
                <i class="bi bi-lock-fill"></i> Đổi mật khẩu
            </a>
        </div>

        <!-- Card Body -->
        <div class="card-body">
            <h2 class="card-title text-center mb-4">Đổi mật khẩu</h2>
            <form asp-action="ChangePassword" method="post">
                <!-- Current Password -->
                <div class="mb-3">
                    <label for="currentPassword" class="form-label"><strong>Mật khẩu hiện tại</strong></label>
                    <input type="password" class="form-control" id="currentPassword" name="CurrentPassword" required>
                </div>
                <!-- New Password -->
                <div class="mb-3">
                    <label for="newPassword" class="form-label"><strong>Mật khẩu mới</strong></label>
                    <input type="password" class="form-control" id="newPassword" name="NewPassword" required>
                </div>
                <!-- Confirm New Password -->
                <div class="mb-3">
                    <label for="confirmNewPassword" class="form-label"><strong>Nhập lại mật khẩu mới</strong></label>
                    <input type="password" class="form-control" id="confirmNewPassword" name="ConfirmNewPassword" required>
                </div>
                <!-- Submit Button -->
                <div class="text-center">
                    <button type="submit" class="btn w-100" style="background-color: black; color: white;">
                        <i class="bi bi-save"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
