@model HotelApp.ViewModels.RegisterVM


<div class="row justify-content-center align-items-center h-100" style="background-image: url('/images/banner1.jpg'); background-size: cover;">
        <div class="col-md-6 col-lg-4" style="margin:90px 0px;">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="text-center mb-4">ĐĂNG KÝ</h2>
                    <form method="post" asp-action="Register" asp-controller="Account">
                        <div class="mb-3">
                            <label for="FirstName" class="form-label">Họ</label>
                            <input type="text" class="form-control" id="FirstName" name="FirstName" required />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="LastName" class="form-label">Tên</label>
                            <input type="text" class="form-control" id="LastName" name="LastName" required />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="Email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="Email" name="Email" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="PhoneNumber" class="form-label">Số điện thoại</label>
                            <input type="text" class="form-control" id="PhoneNumber" name="PhoneNumber" required />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="Password" class="form-label">Mật khẩu</label>
                            <input type="password" class="form-control" id="Password" name="Password" required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="ConfirmedPassword" class="form-label">Xác nhận mật khẩu</label>
                            <input type="password" class="form-control" id="ConfirmedPassword" name="ConfirmedPassword" required />
                            <span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn w-100" style="background-color: black; color: white">Đăng ký</button>
                    </form>

                    <p class="text-center mt-3">
                        Đã có tài khoản?
                        <a href="@Url.Action("Login", "Account")">Đăng nhập ngay</a>
                    </p>
                </div>
            </div>
        </div>
    </div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
